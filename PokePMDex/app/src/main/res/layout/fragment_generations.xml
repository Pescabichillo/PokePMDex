<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pokedex.Generations">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/generations_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00FFFFFF"
            android:padding="10dp"
            android:src="@drawable/pokemon_rb_logo" />

        <ImageButton
            android:id="@+id/generations_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00FFFFFF"
            android:src="@drawable/pokemon_gs_logo" />

        <ImageButton
            android:id="@+id/generations_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00FFFFFF"
            android:src="@drawable/pokemon_rs_logo" />

        <ImageButton
            android:id="@+id/generations_button_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/pokemon_dp_logo" />

        <ImageButton
            android:id="@+id/generations_button_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00FFFFFF"
            android:src="@drawable/pokemon_bw_logo" />

        <ImageButton
            android:id="@+id/generations_button_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/pokemon_xy_logo" />
    </LinearLayout>
</FrameLayout>